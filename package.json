{
  "name": "blotter-api-elysia",
  "version": "1.0.0",
  "description": "Blotter Management System API - Elysia.js + Drizzle ORM",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun run db:push && echo 'Build complete'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/db/seed.ts",
    "test": "powershell -ExecutionPolicy Bypass -File test-api.ps1"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@sendgrid/mail": "^8.1.6",
    "@supabase/supabase-js": "^2.89.0",
    "@types/pg": "^8.11.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "drizzle-orm": "^0.30.0",
    "elysia": "^1.0.0",
    "firebase-admin": "^12.0.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.20.0"
  }
}
